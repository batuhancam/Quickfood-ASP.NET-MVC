@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<!-- SubHeader =============================================== -->
<section class="parallax-window" id="short" data-parallax="scroll" data-image-src="../Images/sub_header_home.jpg" data-natural-width="1400" data-natural-height="350">
    <div id="subheader">
        <div id="sub_content">
            <h1>Profile Details</h1>
            <div><i class="icon_adjust-vert"></i> Change your profile settings easily.</div>
        </div><!-- End sub_content -->
    </div><!-- End subheader -->
</section><!-- End section -->
<!-- End SubHeader ============================================ -->



<div class="container margin_60_35">
    <div class="row">
        <div class="col-lg-3">
            <div id="filters_col">
                <a data-toggle="collapse" href="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters" id="filters_col_bt">Settings <i class="icon-plus-1 float-right"></i></a>
                <div class="collapse show" id="collapseFilters">
                    <div class="filter_type">
                        <h6><a href="~/Profile/Index" class="profile_link"> General </a></h6>
                    </div>
                    <div class="filter_type">
                        <h6><a href="~/Profile/Favorites" class="profile_link"> Favorites</a></h6>
                    </div>
                </div><!--End collapse -->
            </div><!--End filters col-->
        </div><!--End col-md -->

        <div class="col-lg-9">

            <div class="strip_list wow fadeIn" data-wow-delay="0.1s">

                <div class="row">
                    <div class="col-md-12">
                        <div class="desc" style="padding-left: 0px">
                            <h3>Profile Settings</h3>                             
                            <div class="col-md-12 border-right">
                                <div class="py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h4 class="text-right">

                                          

                                        </h4>
                                    </div>
                                    
                                    <form action="/User/UpdateProfile/" method="post">
                                        <div class="row mt-3">
                                            <div class="col-md-6"><label class="labels">Id</label><input type="text" class="form-control" name="userId" readonly value="@ViewBag.isUser.UserId"></div>
                                            <div class="col-md-6"><label class="labels">Username</label><input type="text" class="form-control" readonly value="@ViewBag.isUser.Username"></div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-md-6"><label class="labels">Name </label><input type="text" class="form-control" placeholder="first name" name="firstName" value="@ViewBag.isUser.FirstName"></div>
                                            <div class="col-md-6"><label class="labels">Surname</label><input type="text" class="form-control" placeholder="surname" name="surName" value="@ViewBag.isUser.SurName"></div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control" placeholder="enter email id" name="mail" value="@ViewBag.isUser.Mail"></div>
                                        </div>
                                    
                                        <div class="mt-5 text-center"><button class="btn profile-button" style="background-color: #da3d0d; color:#FFF" type="submit">Save Profile</button></div>
                                    </form>

                                </div>
                            </div>


                        </div>
                    </div>
                    
                    </div>
                </div><!-- End row-->
            </div><!-- End strip_list-->
        </div><!-- End col-md-9-->

    </div><!-- End row -->
<!-- End Content =============================================== -->
