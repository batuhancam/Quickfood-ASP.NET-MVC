
@{
    ViewBag.Title = "AddIngredients";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Ingredients</h4>
                <p class="card-title-desc">
                </p>
                <form action="/Admin/AddIngredients" method="post">
                    <div class="form-group row">
                        <label for="foodName" class="col-sm-2 col-form-label">Add Ingredients</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="" id="ingredientName" name="ingredientName">
                        </div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn profile-button" style="background-color: #626ed4; color:#FFF" type="submit">Add Ingredient</button></div>
                </form>
            </div>
        </div>
        <div class="card" style="margin-top: 30px">
            <div class="card-body">
                <h4 class="card-title">Ingredient List</h4>
                <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Ingredient Name</th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var ingredient in ViewBag.Ingredients)
                        {
                            <tr>
                                <td>@ingredient</td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
