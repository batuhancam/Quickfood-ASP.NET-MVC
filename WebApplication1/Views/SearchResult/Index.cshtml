@using WebApplication1.Models
@model List<Food>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!-- SubHeader =============================================== -->
<section class="parallax-window" id="short" data-parallax="scroll" data-image-src="../Images/sub_header_home.jpg" data-natural-width="1400" data-natural-height="350">
    <div id="subheader">
        <div id="sub_content">
            <h1>Searh Results</h1>
            <div><i class="icon_search"></i> 6 Result has founded.</div>
        </div><!-- End sub_content -->
    </div><!-- End subheader -->
</section><!-- End section -->
<!-- End SubHeader ============================================ -->


<div class="container margin_60_35">
    <div class="row">
        <div class="col-lg-3">
            <p>
                <a class="btn_map" data-toggle="collapse" href="#collapseMap" aria-expanded="false" aria-controls="collapseMap" data-text-swap="Hide map" data-text-original="View on map">View on map</a>
            </p>
            <div id="filters_col">
                <a data-toggle="collapse" href="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters" id="filters_col_bt">Filters <i class="icon-plus-1 float-right"></i></a>
                <div class="collapse show" id="collapseFilters">
                    <div class="filter_type">
                        <h6>Ingredients</h6>
                        <ul>
                            <li><label>Rice</label></li>
                            <li><label>Salmon</label></li>
                            <li><label>Garlic</label></li>
                            <li><label>Onion</label></li>
                            <li><label>Pasta</label></li>
                        </ul>
                    </div>
                </div><!--End collapse -->
            </div><!--End filters col-->
        </div><!--End col-md -->

        <div class="col-lg-9">
            <div id="tools">
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-5">
                        <div class="styled-select">
                            <select name="sort_rating" id="sort_rating">
                                <option value="" selected>Sort by ranking</option>
                                <option value="lower">Lowest ranking</option>
                                <option value="higher">Highest ranking</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div><!--End tools -->

            @foreach (var food in ViewBag.Foods)
            {

                <div class="strip_list wow fadeIn" data-wow-delay="0.1s">

                    <div class="row">
                        <div class="col-md-9">
                            <div class="desc">
                                <div class="thumb_strip">
                                    <a href="detail_page.html"><img src="~/Images/thumb_restaurant_2.jpg" alt=""></a>
                                </div>
                                <h3>@food.FoodName <i class="fa fa-heart"></i></h3>
                                <div class="type">
                                    @food.CategoryId
                                </div>
                                <div class="location">
                                    @food.Recipe

                                </div>
                                <ul>
                                    <li>Rice<i class="icon_check_alt2 ok"></i></li>
                                    <li>Salmon<i class="icon_check_alt2 ok"></i></li>
                                    <li>Garlic<i class="icon_check_alt2 ok"></i></li>
                                    <li>Onion<i class="icon_check_alt2 no"></i></li>
                                    <li>Pasta<i class="icon_check_alt2 no"></i></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="go_to">
                                <div>
                                    <a href="detail_page.html" class="btn_1">View Recipe</a>
                                </div>
                            </div>
                        </div>
                    </div><!-- End row-->
                </div><!-- End strip_list-->
            }

        </div><!-- End col-md-9-->

    </div><!-- End row -->
</div><!-- End container -->
<!-- End Content =============================================== -->
