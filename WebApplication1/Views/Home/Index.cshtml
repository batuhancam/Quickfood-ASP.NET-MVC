<section class="header-video">
    <div id="hero_video">
        <div id="sub_content">
            <h1>Which ingredients do you have?</h1>
            <p>
                Add the ingredients you already have and reach the propriate recipes
            </p>
            <div id="custom-search-input">
                <div class="input-group">
                    <form action="SearchResult/GetFoods" method="post">
                        <input type="text" class="search-query" placeholder="Ingredients you have" name="ingredient">
                        <p>@ViewBag.IngredientError</p>
                        <span class="input-group-btn">
                            <button class="btn_search" type="submit" id="add_ingredients" style="margin-right:30px; background-color: transparent; ">
                                <i class="fa fa-plus"></i>
                            </button>
                            <input type="submit" name="search_food" value="" style="background: url(../Images/search.svg) no-repeat center right;" class="btn_search" />
                        </span>
                        <ul class="ingredients">
                        </ul>
                    </form>
                </div>
            </div>
        </div><!-- End sub_content -->
    </div>+
    <img src="~/Images/video_fix.png" alt="" class="header-video--media" data-video-src="" data-teaser-source="video/intro" data-provider="" data-video-width="1920" data-video-height="960">
